<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="40dp"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/folder_new"
        android:minHeight="40dp"
        android:background="#eeeeee"
        android:visibility="visible">

        <ImageView
            android:id="@+id/handleside"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:tint="#000"
            android:src="@drawable/ic_drag_handle_black_24dp"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/handleside2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:tint="#FF757575"
            android:src="@drawable/ic_folder_black_24dp"
            android:layout_centerVertical="true" />

        <Button
            android:id="@+id/folder_name"
            android:minHeight="0dp"
            android:layout_height="wrap_content"
            android:layout_width="90dp"
            android:layout_centerVertical="true"
            android:text="Folder nou"
            android:layout_marginStart="60dp"
            android:background="@android:color/transparent"
            android:gravity="left|center"
            android:textAllCaps="false"
            android:layout_marginLeft="34dp"
            android:textStyle="bold"
            style="@android:style/Widget.TextView" />

    </RelativeLayout>



</RelativeLayout>